<div class="content">
  <div class="register">
    <h3>商品登録</h3>
      <%= form_with model: @product, local: true do |f| %>
        <div class="field">
          <%= f.label :product_name, "商品名" %><br/>
          <%= f.text_field :product_name, class: 'product_name__label' %>
        </div>
        <div class="field">
          <%= f.label :category_id, "商品カテゴリー" %><br/>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"product-category"}) %>
        </div>
        <div class="field">
          <%= f.label :image, "商品画像" %><br/>
          <%= f.file_field :image, id: "item-image"%>
        </div>
        <%= f.submit "登録", class:"btn" %>
      <% end %>
  </div>
</div>