<div class="contents" id="contents">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <h1>CatcherApp</h1>
          <div>
           <% @products.each do |product| %>
            <%= link_to product_path(product.id) do %>
              <%= image_tag product.image %>
            <% end %>
              <%= product.product_name %>
              <%= product.category.name %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>